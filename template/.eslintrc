{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:vue/recommended",
    "airbnb-base",
    "loopback"
  ],
  "plugins": [
    "vue",
    "jest"
  ],
  "rules": {
    "import/no-unresolved": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.spec.js",
          "__tests__/*.js",
          "test/**/*.js",
          "gulp-tasks/**/*.js",
          "jest.config.js",
          "jest.plugins.js"
        ]
      }
    ],
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "no-param-reassign": "off",
    "one-var-declaration-per-line": "off"
  },
  "globals": {
    "require": true
  }
}
